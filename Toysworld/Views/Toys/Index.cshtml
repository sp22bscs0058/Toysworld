@model IEnumerable<Toysworld.Models.Toy>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <style>
        .table {
            background-color: lightblue; /* Ensure table background color is light blue */
        }

        .btn-create,
        .btn-edit,
        .btn-details,
        .btn-delete {
            color: darkblue;
            text-decoration: none;
            margin-right: 5px;
        }
    </style>
</head>
<body style="background-color: pink;">
    <h1>Index</h1>

    <p>
        <a class="btn-create" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ToyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeOfToy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfToy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a class="btn-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn-details" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
